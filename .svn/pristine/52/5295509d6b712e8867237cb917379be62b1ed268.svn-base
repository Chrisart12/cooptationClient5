.gallery-filter-container{
    background-color: $titleColorRed;
    width: 100%;
    height: 80px;
    padding-top:20px;
    
    .topthirty{
        @include SmartphonesLandscape{
            float: right;
        }
    }
}

.gallery-navbar{
    border-bottom: 1px solid $textColorBlackOne;
}

.gallery-container {
    margin-top: 90px;
    text-align: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;

    @include BigSmartphonesPortrait{
        margin-top: 160px;
    }

}

.gallery-container-image {
    width: 265px;
    height: 330px;
    margin-bottom: 20px;
    
    .lien-image{
        text-decoration: none;
    }

    .gallery-image {
        width: 265px;
        height: 330px;
        background-repeat: no-repeat;
        background-size: cover;
        transform: scale(1);
        transition: all 600ms;
        @include imageShadow;
    
        &:hover{
            transform: scale(1.05);
            filter: grayscale(90%);
        }
    
        &:hover .zoom {
            opacity: 1;
           
        }

        .gallery-name{
            color: $backgroundColor;
            padding-top: 10px;
            text-overflow: ellipsis;
            @include textShadow;
        }

        .zoom {
            font-size: 40px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color:white;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .gallery-like-image{
            background-repeat: no-repeat;
            width: 60px;
            height: 60px;
            position: relative;
            top: 230px;

            .gallery-like{
                position: relative;
                top: 15px;
                color: $backgroundColor;
                font-weight: 700;

            }
        }
    }
}